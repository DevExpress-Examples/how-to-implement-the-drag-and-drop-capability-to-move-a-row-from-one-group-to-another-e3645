<Window x:Class="Q356907.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
        xmlns:local="clr-namespace:Q356907"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <dxg:TreeListControl x:Name="grid" AllowDrop="True">
            <dxg:TreeListControl.Columns>
                <dxg:TreeListColumn FieldName="Text"/>
            </dxg:TreeListControl.Columns>
            <dxg:TreeListControl.View>
                <dxg:TreeListView Name="view" ParentFieldName="ParentNumber" KeyFieldName="Number"/>
            </dxg:TreeListControl.View>
        </dxg:TreeListControl>

    </Grid>
</Window>
